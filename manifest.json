{
  "manifest_version": 3,
  "name": "AI Browser Agent",
  "version": "0.1.0",
  "description": "An AI agent to interact with the browser.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
